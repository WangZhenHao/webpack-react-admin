{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitThis": false,
    "baseUrl": "./",
    "paths": {
        "@/*": ["./src/*"],
        "@views/*": ["./src/views/*"],
        "@router/*": ["./src/router/*"],
        "@js/*": ["./src/assets/js/*"],
        "@css/*": ["./src/assets/css/*"],
        "@img/*": ["./src/assets/img/*"],
        "@api/*": ["./src/api/*"],
        "@store/*": ["./src/store/*"],
        "@components/*": ["./src/components/*"],
        "@hooks/*": ["./src/hooks/*"]
    },
  },
  "include": [
    "src"
  ]
}
